{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["jest", "node", "styled-components-react-native"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/node_modules/*"]
}